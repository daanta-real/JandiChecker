<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<!-- 1. Appenders -->
	<!-- STDOUT -->
	<appender name="JTextAppender" class="utils.logging.JTextAppender">
		<pattern>
			[%d{yyyy-MM-dd HH:mm:ss}:%-3relative][%thread] %-5level %logger{36} -ì«º- %msg%n
		</pattern>
	</appender>

	<logger name="JTextLogger" level="INFO" />

	<!-- 2. Output level -->
	<root level="INFO">
		<appender-ref ref="JTextAppender" />
	</root>

</configuration>
